<% include header %>
<div class="container">
  <div class="row">
    <h1 style="text-align:center">Add a new question</h1>
    <div style="width:30%; margin:25px auto">
        <ul>
            <h3>Tips on getting good answers quickly:</h3>
            <li>Make sure your question hasn't been asked already.</li>
            <li>Keep your question short and to the point.</li>
            <li>Double-check grammar and spelling.</li>
        </ul>
      <form class="" action="/new" method="post">
        <div class="form-group">
          <input id="defaultValue" class="form-control" type="hidden" name="name" value="" placeholder="user name">
        </div>
        <div class="form-group">
          <input id="photoURL" class="form-control" type="hidden" name="photoURL" value="<%= currentUser.profile %>" >
        </div>
        <div class="form-group">
          <label for="question">Question:</label>
          <textarea placeholder="Question Description" type="text" name="question" id="question" cols="89" rows="5" style="border: lightgray    1px solid; border-radius: 2px;"></textarea>
        </div>

        <div class="form-group">
          <label for="code">Code: </label>
          <textarea onkeydown="handleTabPress(event)" type="text" name="code" id="code" cols="89" rows="5" style="border: lightgray    1px solid; border-radius: 2px;" placeholder="Code(if any)"></textarea>
        </div>

        <div class="form-group">
          <label for="category">Category:</label>
          <input class="form-control" type="text" name="category" value="" placeholder="Category">
        </div>
        <button type="submit" class="btn btn-primary">Add Question</button>
      </form>
      <a href="/">GO BACK</a>
    </div>
  </div>
</div>
<script>
  var x = document.querySelector("#defaultValue").defaultValue=document.querySelector("#loggedInAs").innerText.slice(13);

  function handleTabPress(event) {

    if(event.keyCode == 9) {
      event.preventDefault();
      document.getElementById('code').value += '    ';
    }
  }
</script>
<% include footer %>