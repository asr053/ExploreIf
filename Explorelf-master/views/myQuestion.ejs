<script>
    var x = document.querySelector("#loggedInAs").innerText.slice(13);
    var lst = document.querySelectorAll(".forFindingUser");
    lst.forEach(function(e) {
        if(e.innerText != x)
        {
            e.parentNode.parentNode.parentNode.style.display = "none";
        }
    });


    function myFunction() {
    var input, filter, ul, li, a, i, txtValue;
    input = document.getElementById("myInput");
    toRem = document.querySelectorAll(".toRemove");
    filter = input.value.toUpperCase(); 
    li = document.querySelectorAll(".forSearch");
    for (i = 0; i < li.length; i++) {
        a = li[i];
        txtValue = a.textContent || a.innerText;
        if (txtValue.toUpperCase().indexOf(filter) > -1) {
            toRem[i].style.display = "";
        } else {
            toRem[i].style.display = "none";
        }
    }
  }

  </script>
